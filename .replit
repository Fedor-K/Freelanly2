[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "start", "--", "-p", "5000", "-H", "0.0.0.0"]
build = ["npm", "run", "build"]

# Scheduled tasks (cron jobs)
# Process INSTANT alert queue every 5 minutes
[[deployment.scheduled]]
trigger = "*/5 * * * *"
action = "http"
[deployment.scheduled.http]
method = "POST"
path = "/api/cron/process-instant-alerts"
headers = { Authorization = "Bearer ${CRON_SECRET}" }

# Fetch LinkedIn jobs daily at 6:00 UTC
[[deployment.scheduled]]
trigger = "0 6 * * *"
action = "http"
[deployment.scheduled.http]
method = "POST"
path = "/api/cron/fetch-linkedin"
headers = { Authorization = "Bearer ${CRON_SECRET}" }

# Fetch ATS sources daily at 6:00 UTC
[[deployment.scheduled]]
trigger = "0 6 * * *"
action = "http"
[deployment.scheduled.http]
method = "POST"
path = "/api/cron/fetch-sources"
headers = { Authorization = "Bearer ${CRON_SECRET}" }

# Send DAILY job alerts at 7:00 UTC
[[deployment.scheduled]]
trigger = "0 7 * * *"
action = "http"
[deployment.scheduled.http]
method = "POST"
path = "/api/cron/send-alerts?frequency=DAILY"
headers = { Authorization = "Bearer ${CRON_SECRET}" }

# Send trial onboarding emails every hour
[[deployment.scheduled]]
trigger = "0 * * * *"
action = "http"
[deployment.scheduled.http]
method = "POST"
path = "/api/cron/send-trial-emails"
headers = { Authorization = "Bearer ${CRON_SECRET}" }
